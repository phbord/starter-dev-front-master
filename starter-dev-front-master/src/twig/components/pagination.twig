{% macro paginationNav(numberItems) %}

    <nav class="pagination-nav" aria-label="Page navigation">
        <ul class="pagination">
            {# PREVIOUS #}
            <li class="page-item">
                <a class="page-link" href="#">
                    <svg class="icon-arrow icon-arrow--prev">
                        <use xlink:href="#icon-arrow"></use>
                    </svg>
                </a>
            </li>
            {# PAGE NUMBERS #}
            {% for i in 1..numberItems %}
                <li class="page-item">
                    <a class="page-link" href="#">
                        <span>{{ i }}</span>
                    </a>
                </li>
            {% endfor %}
            {# NEXT #}
            <li class="page-item">
                <a class="page-link" href="#">
                    <svg class="icon-arrow icon-arrow--next">
                        <use xlink:href="#icon-arrow"></use>
                    </svg>
                </a>
            </li>
        </ul>
    </nav>

{% endmacro %}